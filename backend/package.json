{
  "name": "backend-api",
  "version": "1.0.0",
  "description": "Modern backend API system using Node.js, TypeScript, tRPC, Zod, and Prisma",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "tsx src/test/testRunner.ts all",
    "test:unit": "tsx src/test/testRunner.ts unit",
    "test:integration": "tsx src/test/testRunner.ts integration",
    "test:trpc": "tsx src/test/testRunner.ts trpc",
    "test:watch": "tsx src/test/testRunner.ts watch",
    "test:coverage": "tsx src/test/testRunner.ts coverage",
    "test:report": "tsx src/test/testRunner.ts report",
    "test:pre-commit": "tsx src/test/testRunner.ts pre-commit",
    "test:ci": "tsx src/test/testRunner.ts ci",
    "test:clean": "tsx src/test/testRunner.ts clean",
    "test:seed": "tsx src/test/testRunner.ts seed",
    "test:reset": "tsx src/test/testRunner.ts reset",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "docker:build": "docker build -t backend-api .",
    "docker:build:dev": "docker build -f development.Dockerfile -t backend-api:dev .",
    "docker:build:prod": "docker build --target production -t backend-api:latest .",
    "docker:run": "docker run -p 3000:3000 backend-api",
    "docker:run:prod": "docker run -p 3000:3000 --env-file .env backend-api:latest",
    "docker:compose:up": "docker compose up -d",
    "docker:compose:down": "docker compose down",
    "docker:compose:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "docker:compose:prod": "docker compose up -d --build",
    "docker:compose:logs": "docker compose logs -f backend",
    "docker:compose:restart": "docker compose restart backend"
  },
  "keywords": [
    "typescript",
    "trpc",
    "zod",
    "prisma",
    "express",
    "api",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@elastic/elasticsearch": "^8.11.0",
    "@prisma/client": "^5.7.1",
    "@trpc/server": "^10.45.0",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "openapi-types": "^12.1.3",
    "redis": "^4.6.12",
    "swagger-ui-express": "^5.0.1",
    "trpc-openapi": "^1.2.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}