{
  "name": "backend-api-project",
  "version": "1.0.0",
  "description": "Full-stack application with backend API",
  "private": true,
  "scripts": {
    "dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "dev:logs": "docker compose logs -f backend",
    "dev:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
    "prod:logs": "docker compose logs -f backend",
    "prod:down": "docker compose -f docker-compose.yml -f docker-compose.prod.yml down",
    "build": "docker compose build backend",
    "restart": "docker compose restart backend",
    "clean": "docker compose down -v --remove-orphans && docker system prune -f",
    "backend:install": "cd backend && npm install",
    "backend:build": "cd backend && npm run build",
    "backend:test": "cd backend && npm test",
    "db:migrate": "docker compose exec backend npm run db:migrate",
    "db:seed": "docker compose exec backend npm run db:seed",
    "db:studio": "docker compose exec backend npm run db:studio",
    "validate": "./scripts/docker-validate.sh",
    "setup": "./scripts/docker-setup.sh"
  },
  "keywords": [
    "docker",
    "typescript",
    "backend",
    "api"
  ],
  "author": "",
  "license": "MIT"
}